<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollable"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Homefragback"
    tools:context=".MaterilasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/montblack"
                android:gravity="start"
                android:padding="10dp"
                android:text="Materilas"
                android:textColor="@color/homefragfont"
                android:textSize="18sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMaterialsUnitOne"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginVertical="15dp"
            app:cardBackgroundColor="#9EE9FA"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit One"
                android:textColor="@color/Homefragback"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:fontFamily="@font/montbold"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMaterialsUnitTwo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="#9EE9FA"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Two"
                android:textColor="@color/Homefragback"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:fontFamily="@font/montbold"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMaterialsUnitThree"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="30dp"
            app:cardBackgroundColor="#9EE9FA"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Three"
                android:textColor="@color/Homefragback"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:fontFamily="@font/montbold"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMaterialsUnitFour"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardBackgroundColor="#9EE9FA"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Four"
                android:textColor="@color/Homefragback"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:fontFamily="@font/montbold"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMaterialsUnitFive"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            app:cardBackgroundColor="#9EE9FA"
            app:cardCornerRadius="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Five"
                android:textColor="@color/Homefragback"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:fontFamily="@font/montbold"/>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>