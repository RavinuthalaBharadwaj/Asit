<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Homefragback"
    tools:context=".FacultyHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/oboardfont"
                android:text="Welcome"
                android:textColor="@color/homefragfont"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAttendance"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/one"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/CustomBlack"
                app:cardCornerRadius="10dp"
                app:cardElevation="5sp"
                app:cardMaxElevation="7sp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montbold"
                    android:gravity="center"
                    android:text="Daily Attendance"
                    android:textColor="@color/homefragfont"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv15DaysAttendance"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/cvAttendance"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:cardBackgroundColor="@color/CustomBlack"
                app:cardCornerRadius="10dp"
                app:cardElevation="5sp"
                app:cardMaxElevation="7sp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montbold"
                    android:gravity="center"
                    android:text="15 days Attendance"
                    android:textColor="@color/homefragfont"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>