<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_KqyKvM.json">
        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montbold"
            android:layout_gravity="center"
            android:textColor="@color/CustomBlack"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Attendance will be available\nAfter 12 hours of creating \nnew account"
            android:textAlignment="center"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will update your once the data\nis allocated to you"
            android:textColor="@color/Homefragback"
            android:gravity="center"
            android:alpha="0.7"
            android:fontFamily="@font/oboardfont"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>