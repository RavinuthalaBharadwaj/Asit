<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Homefragback"
    tools:context=".SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/sphere_white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montbold"
                    android:textColor="@color/homefragfont"
                    android:text="We giving you our promise"
                    android:gravity="center"
                    android:alpha="0.6"
                    android:layout_marginHorizontal="10dp"
                    android:lineSpacingExtra="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    android:textSize="23sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montbold"
                    android:textColor="@color/homefragfont"
                    android:text="to give you the best"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:lineSpacingExtra="0.5dp"
                    android:alpha="0.8"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:textSize="18sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montblack"
                    android:textColor="@color/homefragfont"
                    android:text="Experience"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:lineSpacingExtra="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:textSize="15sp">

                </TextView>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_downward_40"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:layout_marginVertical="25dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvSignin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/homefragfont">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_gravity="center"
                    android:textColor="@color/Homefragback"
                    android:fontFamily="@font/montbold"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:layout_gravity="center"
                android:alpha="0.6"
                android:textColor="@color/homefragfont"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montbold"
                android:textSize="16sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSignup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="80dp"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/CustomBlack">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create an account"
                    android:layout_gravity="center"
                    android:textColor="@color/homefragfont"
                    android:fontFamily="@font/montbold"
                    android:textSize="16sp"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="60dp"
                android:layout_marginHorizontal="30dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#1B1C1E"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="5dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#EEF6F5F5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign in"
                                android:layout_gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/Homefragback"
                                android:fontFamily="@font/montbold"/>
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/montbold"
                                android:text="Sign up"
                                android:textColor="@color/homefragfont"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>