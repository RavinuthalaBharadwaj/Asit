<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GiveAttendanceFor15Days">

    <TextView
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CustomPurple"
        android:textColor="@color/Homefragback"
        android:fontFamily="@font/montsemibold"
        android:textSize="16sp"
        android:text="Thanks for your hardwork \nand dedication to this app"
        android:padding="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/one"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvRollNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="202H1A05B2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:fontFamily="@font/hel_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Classes Held"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:textSize="17sp"
            android:fontFamily="@font/hel_bold"/>

        <EditText
            android:id="@+id/etHeld"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/homefragfont"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/etbackfdefault"
            android:layout_marginTop="10dp">
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Classes Attended"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:fontFamily="@font/hel_bold"/>

        <EditText
            android:id="@+id/etAttended"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="60dp"
            android:textColor="@color/homefragfont"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:background="@drawable/etbackfdefault"
            android:layout_marginTop="10dp">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Percentage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:fontFamily="@font/hel_bold"/>

        <EditText
            android:id="@+id/etPercentage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="numberDecimal"
            android:textColor="@color/homefragfont"
            android:padding="10dp"
            android:background="@drawable/etbackfdefault"
            android:layout_marginTop="10dp">
        </EditText>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardBackgroundColor="@color/CustomPurple"
            android:layout_marginHorizontal="30dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center"
                android:textColor="@color/Homefragback"
                android:textSize="18sp"
                android:fontFamily="@font/hel_bold_round"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>