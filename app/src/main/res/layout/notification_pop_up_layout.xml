<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="@color/CustomBlack"
    app:cardElevation="10dp"
    android:layout_marginBottom="20dp"
    app:cardMaxElevation="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/mesh12"
        android:scaleType="centerCrop">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello there !"
        android:textColor="@color/Homefragback"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hel_bold_round"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/title"
        android:layout_marginStart="30dp"
        android:textColor="@color/Homefragback"
        android:fontFamily="@font/montsemibold"
        android:layout_marginTop="10dp"
        android:text="Attendace updated tap here to see \nyour attendance"/>
        </RelativeLayout>

