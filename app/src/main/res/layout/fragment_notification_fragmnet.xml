<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.NotificationFragmnet">


    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you can see your recent\nnotification"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/montbold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/NotificationRecyclerer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/one" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/no_notification"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

</RelativeLayout>