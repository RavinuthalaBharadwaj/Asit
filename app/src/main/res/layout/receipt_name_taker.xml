<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:id="@+id/cvMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montbold"
            android:textColor="@color/CustomBlack"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:text="Enter the type of receipt"
            android:textAlignment="center"
            android:textSize="16sp">

        </TextView>

        <EditText
            android:id="@+id/etTypeofReceipt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/Homefragnotifybar"
            android:textColorHint="@color/Homefragnotifybar"
            android:fontFamily="@font/montsemibold"
            android:textSize="14.5sp"
            android:layout_marginBottom="10dp"
            android:hint="Ex: Examfee ,Hostelfee .."
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/etbackfdefault">
        </EditText>

        <LinearLayout
            android:id="@+id/lyt_orderid"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montbold"
                android:textColor="@color/CustomBlack"
                android:layout_marginTop="2dp"
                android:layout_marginStart="25dp"
                android:text="Enter the order ID of receipt "
                android:textAlignment="center"
                android:textSize="16sp">

            </TextView>
            <EditText
                android:id="@+id/etReceiptId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:maxLength="10"
                android:inputType="phone"
                android:textColor="@color/Homefragnotifybar"
                android:textColorHint="@color/Homefragnotifybar"
                android:fontFamily="@font/montsemibold"
                android:textSize="14.5sp"
                android:layout_marginBottom="20dp"
                android:hint="Ex: 78372823"
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/etbackfdefault">
            </EditText>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProceed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/Homefragnotifybar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Proceed"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/montbold"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>