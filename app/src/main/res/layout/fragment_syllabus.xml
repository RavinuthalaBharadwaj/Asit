<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Syllabus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montiextrabold"
                    android:text="Syllabus"
                    android:textColor="@color/CustomFontColor"
                    android:textSize="18sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="At present we have the Third year syllabus"
                android:textColor="@color/CustomBlack"
                android:fontFamily="@font/sourcesemibold"
                android:textSize="17sp"
                android:gravity="center"
                android:alpha="0.7"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="7dp"
                android:layout_marginBottom="20dp"
                app:cardMaxElevation="10dp"
                android:layout_marginHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FLAT"
                        android:textColor="@color/CustomBlack"
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montbold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get the syllabus of Formal Language and Automata Theory ."
                            android:textColor="@color/CustomBlack"
                            android:gravity="center"
                            android:alpha="0.8"
                            android:layout_marginHorizontal="25dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/sourcesemibold"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="7dp"
                android:layout_marginBottom="20dp"
                app:cardMaxElevation="10dp"
                android:layout_marginHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Mining"
                        android:textColor="@color/CustomBlack"
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montbold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get the Syllabus of Data ware housing and \ndata mining"
                            android:textColor="@color/CustomBlack"
                            android:gravity="center"
                            android:alpha="0.8"
                            android:textSize="15sp"
                            android:fontFamily="@font/sourcesemibold"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="7dp"
                android:layout_marginBottom="20dp"
                app:cardMaxElevation="10dp"
                android:layout_marginHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Computer Networks"
                        android:textColor="@color/CustomBlack"
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montbold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get the Syllabus of Computer Networks"
                            android:textColor="@color/CustomBlack"
                            android:gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:alpha="0.8"
                            android:textSize="15sp"
                            android:fontFamily="@font/sourcesemibold"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="7dp"
                android:layout_marginBottom="20dp"
                app:cardMaxElevation="10dp"
                android:layout_marginHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cyber Security"
                        android:textColor="@color/CustomBlack"
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montbold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Get the updated Syllabus of Cyber Security"
                            android:textColor="@color/CustomBlack"
                            android:gravity="center"
                            android:alpha="0.8"
                            android:textSize="15sp"
                            android:fontFamily="@font/sourcesemibold"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="7dp"
                android:layout_marginBottom="20dp"
                app:cardMaxElevation="10dp"
                android:layout_marginHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textColor="@color/CustomBlack"
                        android:textSize="18sp"
                        android:gravity="end"
                        android:layout_marginEnd="30dp"
                        android:layout_gravity="end"
                        android:fontFamily="@font/montbold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="15dp">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/attendance"
                            android:scaleX="0.9"
                            android:scaleY="0.9"
                            android:layout_marginStart="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Check your attendance percentage before planning a vacation"
                            android:textColor="@color/CustomBlack"
                            android:gravity="center"
                            android:alpha="0.8"
                            android:textSize="15sp"
                            android:fontFamily="@font/sourcesemibold"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>