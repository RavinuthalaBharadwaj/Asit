<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:layout_marginTop="40dp"
                android:src="@drawable/signup"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montiextrabold"
                    android:textColor="@color/CustomBlack"
                    android:text="Thanks for Being\nthe part of our\nFamily"
                    android:textAlignment="center"
                    android:textSize="26sp">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:hint="Name"
                    android:textColorHint="@color/CustomFontColor"
                    android:gravity="center"
                    android:textColor="@color/CustomFontColor"
                    android:fontFamily="@font/sourcesemibold"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/etbackfdefault"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:hint="Roll Number"
                    android:textSize="16sp"
                    android:textColor="@color/CustomFontColor"
                    android:textColorHint="@color/CustomFontColor"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesemibold"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/etbackfdefault"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:hint="Phone Number"
                    android:textSize="16sp"
                    android:textColor="@color/CustomFontColor"
                    android:textColorHint="@color/CustomFontColor"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesemibold"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/etbackfdefault"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="20dp"
                    android:hint="password"
                    android:textSize="16sp"
                    android:textColor="@color/CustomFontColor"
                    android:textColorHint="@color/CustomFontColor"
                    android:gravity="center"
                    android:fontFamily="@font/sourcesemibold"
                    android:layout_marginHorizontal="40dp"
                    android:background="@drawable/etbackfdefault"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="45dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvGetStarted"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="50dp"
                    app:cardBackgroundColor="@color/CustomBlack"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montbold"
                        android:gravity="center"
                        android:text="Sign up"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="60dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/sourcesemibold"
                        android:textColor="@color/CustomBlack"
                        android:text="Remeber you Account ?"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/montbold"
                        android:textColor="@color/CustomRed"
                        android:text=" Sign in"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>