<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Homefragback"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginHorizontal="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35sp"
                    android:fontFamily="@font/hel_bold_round"
                    android:textColor="@color/homefragfont"
                    android:text="Sign up so you don't miss it!"
                    android:layout_gravity="start"
                    android:textSize="23sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35sp"
                    android:layout_marginTop="10sp"
                    android:alpha="0.8"
                    android:fontFamily="@font/hel_bold_round"
                    android:textColor="@color/homefragfont"
                    android:text="Tell us about yourself\nso, we can create\nyour account"
                    android:layout_gravity="start"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/etbackfdefault"
                        android:fontFamily="@font/sourcesemibold"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="20dp"
                        android:textColor="@color/homefragfont"
                        android:textColorHint="#D1D1D1"
                        android:textSize="14.5sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/namelottie"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        app:lottie_autoPlay="false"
                        app:lottie_rawRes="@raw/done"></com.airbnb.lottie.LottieAnimationView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:id="@+id/etRollNumber"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/etbackfdefault"
                        android:capitalize="words"
                        android:fontFamily="@font/sourcesemibold"
                        android:gravity="start"
                        android:hint="Roll Number"
                        android:maxLength="10"
                        android:padding="20dp"
                        android:textColor="@color/homefragfont"
                        android:textColorHint="#D1D1D1"
                        android:textSize="14.5sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/Rollnumberlottie"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        app:lottie_rawRes="@raw/done"></com.airbnb.lottie.LottieAnimationView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/etbackfdefault"
                        android:fontFamily="@font/sourcesemibold"
                        android:gravity="start"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="20dp"
                        android:textColor="@color/homefragfont"
                        android:textColorHint="#D1D1D1"
                        android:textSize="14.5sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/phonenumberlottie"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        app:lottie_rawRes="@raw/done"></com.airbnb.lottie.LottieAnimationView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/etbackfdefault"
                        android:fontFamily="@font/sourcesemibold"
                        android:gravity="start"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="20dp"
                        android:textColor="@color/homefragfont"
                        android:textColorHint="#D1D1D1"
                        android:textSize="14.5sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottiemail"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        app:lottie_rawRes="@raw/done"></com.airbnb.lottie.LottieAnimationView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@drawable/etbackfdefault"
                        android:fontFamily="@font/sourcesemibold"
                        android:gravity="start"
                        android:hint="Password"
                        android:inputType="textVisiblePassword"
                        android:padding="20dp"
                        android:textColor="@color/homefragfont"
                        android:textColorHint="#D1D1D1"
                        android:textSize="14.5sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottiepassword"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="10dp"
                        app:lottie_rawRes="@raw/done"></com.airbnb.lottie.LottieAnimationView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSignup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/homefragfont"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/hel_bold_round"
                        android:gravity="center"
                        android:text="Sign up"
                        android:textColor="@color/Homefragback"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="60dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/sourcesemibold"
                    android:textColor="#E4A5A5A5"
                    android:text="Remember your account?"/>

                <TextView
                    android:id="@+id/tvSignin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montbold"
                    android:textColor="@color/homefragfont"
                    android:text=" Sign in"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>