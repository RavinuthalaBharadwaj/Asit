<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/CustomBlack">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/CvSubjectTwo"
                android:layout_width="190dp"
                android:layout_height="250dp"
                app:cardBackgroundColor="#9DEAFB"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="100dp"
                        android:layout_marginTop="30dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#D8F6FD"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="DM"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:fontFamily="@font/montblack"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DWDM"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/montblack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester - v"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/montsemibold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="A - "
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/montbold"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="00dp"
                            app:cardCornerRadius="100dp"
                            app:cardBackgroundColor="#D8F6FD"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/SubjectTwoAvailAssign"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="5"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/montbold"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="M - "
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/montbold"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="00dp"
                            app:cardCornerRadius="100dp"
                            app:cardBackgroundColor="#D8F6FD"
                            app:cardElevation="0dp">
                            <TextView
                                android:id="@+id/SubjectTwoAvailMater"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="0"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:fontFamily="@font/montbold"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A - "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/montbold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="00dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="#D8F6FD"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/montbold"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  - Available Assignmnets - "
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/montbold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="M - "
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/montbold"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="00dp"
                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="#D8F6FD"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/montbold"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  - Available Materials - "
                    android:layout_marginStart="0dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/montbold"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvNext"
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#9DEAFB">

                <TextView
                    android:id="@+id/TvFinish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Finish"
                    android:textSize="16sp"
                    android:textColor="@color/CustomBlack"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montbold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>