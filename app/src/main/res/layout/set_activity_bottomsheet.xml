<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Homefragback"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set yourself as "
            android:textColor="@color/homefragfont"
            android:fontFamily="@font/montbold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvActiveOutLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/CustomBlack">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/CustomBlack">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/active_dot"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="active"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="30dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/montbold"
                                    android:textColor="@color/homefragfont"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvInActiveOutLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/CustomBlack">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/CustomBlack">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/offline_dot"
                                    android:layout_marginTop="30dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Inactive"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="30dp"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/montbold"
                                    android:textColor="@color/homefragfont"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/Activetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others can see you as active in the application"
            android:textColor="@color/homefragfont"
            android:layout_marginHorizontal="40dp"
            android:padding="10dp"
            android:gravity="center"
            android:fontFamily="@font/montsemibold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/homefragfont"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="70dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save changes"
                android:textColor="@color/Homefragback"
                android:gravity="center"
                android:fontFamily="@font/montbold"
                android:textSize="16sp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
