<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Homefragback"
    tools:context=".TechTalkFrag">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uplaod a TechTalk"
                    android:layout_centerInParent="true"
                    android:textColor="@color/homefragfont"
                    android:fontFamily="@font/montiextrabold"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paste your link here"
                android:fontFamily="@font/montbold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/one"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/tech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/two"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#20575757"
                app:cardCornerRadius="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="#743C3C3C"
                    app:cardCornerRadius="13dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/innerone"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="10dp">

                            <EditText
                                android:id="@+id/etLink"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/oboardfont"
                                android:padding="10dp"
                                android:textColor="@color/homefragfont"
                                android:textSize="16sp"></EditText>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/innertwo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/innerone"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="30dp"
                                android:fontFamily="@font/montsemibold"
                                android:text="Verifying your link"
                                android:textColor="@color/homefragfont"
                                android:textSize="16sp" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/lottie"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="30dp"
                                app:lottie_rawRes="@raw/done" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/innerthree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/innertwo"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="10dp"
                                app:cardBackgroundColor="@color/CustomBlack"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/etTopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_marginHorizontal="00dp"
                                        android:background="@null"
                                        android:fontFamily="@font/oboardfont"
                                        android:hint="Topic name"
                                        android:padding="20dp"
                                        android:textColorHint="#B0F6F5F5"
                                        android:textSize="16sp" />

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:id="@+id/lottiefortopic"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        app:lottie_rawRes="@raw/done"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginEnd="20dp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                app:cardBackgroundColor="@color/CustomBlack"
                                app:cardCornerRadius="10dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <EditText
                                        android:id="@+id/etSubject"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_marginHorizontal="00dp"
                                        android:background="@null"
                                        android:fontFamily="@font/oboardfont"
                                        android:hint="Subject"
                                        android:padding="20dp"
                                        android:textColorHint="#B0F6F5F5"
                                        android:textSize="16sp" />

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:id="@+id/lottieforsubject"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        app:lottie_rawRes="@raw/done"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerInParent="true"
                                        android:layout_marginEnd="20dp" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/innerfour"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_below="@id/innerthree"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/Homefragback"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/oboardfont"
                                android:text="Submit" />
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>