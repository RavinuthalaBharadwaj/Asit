<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/CustomBlack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:textSize="22sp"
        android:fontFamily="@font/montblack"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No worrys we got you ."
        android:textSize="16sp"
        android:fontFamily="@font/montbold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#C4F9F9F9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Email address of your \nregistered account ."
        android:textSize="16sp"
        android:fontFamily="@font/montsemibold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/etVerificationEmail"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/etbackfdefault"
        android:fontFamily="@font/montsemibold"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/homefragfont"
        android:textColorHint="#D1D1D1"
        android:textSize="14.5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The mail will be receieved on Spam Folder"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:fontFamily="@font/montsemibold"
        android:layout_marginTop="10dp"
        android:textColor="@color/CustomRed"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvRequestVerification"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="50dp"
        app:cardBackgroundColor="@color/homefragfont"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="8dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/Loading_Lottie"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/btn_loading"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            android:visibility="gone"
            app:lottie_loop="true"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montbold"
            android:gravity="center"
            android:text="Send Verification to mail"
            android:textColor="@color/Homefragback"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>