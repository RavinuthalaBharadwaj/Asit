<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="@color/CustomBlack"
    app:cardElevation="7dp"
    android:layout_marginBottom="20dp"
    app:cardMaxElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/SearchViewImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/attendancehomefrag"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/SearchViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textColor="@color/homefragfont"
                android:textSize="18sp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/inter"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:visibility="gone"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/SearcViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check your attendance percentage \nbefore planning a vacation"
                    android:textColor="@color/homefragfont"
                    android:gravity="start"
                    android:alpha="0.8"
                    android:textSize="12sp"
                    android:fontFamily="@font/oboardfont"/>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

