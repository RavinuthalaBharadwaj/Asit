<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/CustomBlack"
    app:cardBackgroundColor="@color/CustomBlack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/TvResetText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Check your registered mail for reset link\n In spam Folder "
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/Homefragback"
            android:fontFamily="@font/montbold"
            android:background="@color/ActiveOutline">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter New Password"
            android:textSize="16sp"
            android:fontFamily="@font/montbold"
            android:textColor="@color/homefragfont"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/montsemibold"
            android:layout_marginTop="20dp"
            android:background="@drawable/etbackfdefault"
            android:layout_marginHorizontal="30dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/Cvproceed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/homefragfont"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Password"
                android:gravity="center"
                android:textColor="@color/CustomBlack"
                android:fontFamily="@font/montblack"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.cardview.widget.CardView>